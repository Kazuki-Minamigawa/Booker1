<h1><strong>Editing Book</strong></h1>

<div class="edit-box">
  <%= form_for(@book, url: "/books/#{@book.id}") do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
  <% end %>
</div>


<div class="edit-under">
  <%= link_to "Show", "/books/#{@book.id}" %>
  <%= link_to "Back", "/books" %>
</div>
